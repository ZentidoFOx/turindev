---
// Blogs.astro
import Icon from "../Icon.astro";
---

<section class="blogs-section relative py-16 md:py-24 overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute top-1/4 right-1/4 w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 bg-gradient-to-r from-green-500/6 to-emerald-500/6 rounded-full blur-2xl sm:blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-1/3 left-1/3 w-40 h-40 sm:w-56 sm:h-56 md:w-72 md:h-72 lg:w-80 lg:h-80 bg-gradient-to-r from-emerald-500/8 to-green-500/8 rounded-full blur-2xl sm:blur-3xl animate-pulse" style="animation-delay: 3s;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header de la sección -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-3 px-5 py-2.5 bg-gradient-to-r from-green-500/10 to-emerald-500/10 backdrop-blur-sm border border-green-500/20 rounded-full mb-8">
        <Icon name="file-text" class="w-5 h-5 text-green-400" />
        <span class="text-green-400 font-semibold text-sm">Blog & Artículos</span>
      </div>
      
      <h2 class="blogs-title text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-8">
        Conocimiento <span class="bg-gradient-to-r from-green-400 to-emerald-500 bg-clip-text text-transparent">Compartido</span>
      </h2>
      
      <div class="flex items-center justify-center gap-6">
        <div class="flex items-center gap-2 text-gray-400">
          <Icon name="star" class="w-4 h-4 text-green-400" />
          <span class="text-sm font-medium">Contenido Premium</span>
        </div>
        <div class="w-1 h-1 bg-gray-600 rounded-full"></div>
        <div class="flex items-center gap-2 text-gray-400">
          <Icon name="zap" class="w-4 h-4 text-emerald-400" />
          <span class="text-sm font-medium">Actualizado Semanalmente</span>
        </div>
      </div>
    </div>

    <!-- Grid de artículos -->
    <div class="blogs-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      
      <!-- Artículo 1 -->
      <article class="blog-card group relative bg-gradient-to-br from-gray-900/80 to-black/60 backdrop-blur-xl border border-gray-700/30 rounded-3xl overflow-hidden hover:border-green-400/50 hover:bg-gradient-to-br hover:from-green-900/10 hover:via-gray-900/95 hover:to-emerald-900/10 transition-all duration-500 hover:-translate-y-3 hover:shadow-[0_25px_50px_-12px_rgba(16,185,129,0.4)] cursor-pointer">
        <!-- Glow effect -->
        <div class="absolute -inset-0.5 bg-gradient-to-r from-green-500/20 to-emerald-500/20 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-sm"></div>
        
        <!-- Imagen -->
        <div class="relative aspect-[4/3] overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
            alt="Tendencias de desarrollo web 2024" 
            class="blog-image w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
          
          <!-- Categoría -->
          <div class="absolute top-4 left-4">
            <span class="blog-category px-3 py-1.5 bg-green-500/90 backdrop-blur-sm text-white text-xs font-semibold rounded-full shadow-lg">
              Desarrollo Web
            </span>
          </div>
          
          <!-- Tiempo de lectura -->
          <div class="absolute top-4 right-4">
            <div class="flex items-center gap-1 px-2 py-1 bg-black/50 backdrop-blur-sm rounded-full">
              <Icon name="clock" class="w-3 h-3 text-gray-300" />
              <span class="text-xs text-gray-300 font-medium">5 min</span>
            </div>
          </div>
          
          <!-- Overlay content -->
          <div class="absolute bottom-4 left-4 right-4">
            <!-- Fecha -->
            <div class="flex items-center gap-2 text-gray-300 text-xs mb-2">
              <Icon name="calendar" class="w-3 h-3" />
              <span>15 Enero 2024</span>
            </div>
            
            <!-- Título -->
            <h3 class="text-lg font-bold text-white leading-tight group-hover:text-green-100 transition-colors">
              Las 10 tendencias de desarrollo web que dominarán 2024
            </h3>
          </div>
        </div>
        
        <!-- Footer compacto -->
        <div class="relative p-4 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-7 h-7 bg-gradient-to-br from-green-500 to-emerald-500 rounded-full flex items-center justify-center">
              <span class="text-white text-xs font-bold">TD</span>
            </div>
            <div>
              <span class="text-gray-300 text-sm font-medium">Turin Dev</span>
              <div class="flex items-center gap-1 text-xs text-gray-500">
                <Icon name="heart" class="w-3 h-3" />
                <span>124</span>
              </div>
            </div>
          </div>
          
          <button class="group/btn flex items-center justify-center w-9 h-9 bg-green-500/10 hover:bg-green-500/20 border border-green-500/20 hover:border-green-400/40 rounded-xl transition-all duration-300 hover:scale-110">
            <Icon name="arrow-right" class="w-4 h-4 text-green-400 transition-transform group-hover/btn:translate-x-0.5" />
          </button>
        </div>
      </article>

      <!-- Artículo 2 -->
      <article class="group relative bg-gradient-to-br from-gray-900/80 to-black/60 backdrop-blur-xl border border-gray-700/30 rounded-3xl overflow-hidden hover:border-blue-400/50 hover:bg-gradient-to-br hover:from-blue-900/10 hover:via-gray-900/95 hover:to-cyan-900/10 transition-all duration-500 hover:-translate-y-3 hover:shadow-[0_25px_50px_-12px_rgba(59,130,246,0.4)] cursor-pointer">
        <!-- Glow effect -->
        <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-sm"></div>
        
        <!-- Imagen -->
        <div class="relative aspect-[4/3] overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1498050108023-c5249f4df085?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
            alt="Optimización de rendimiento web" 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
          
          <!-- Categoría -->
          <div class="absolute top-4 left-4">
            <span class="px-3 py-1.5 bg-blue-500/90 backdrop-blur-sm text-white text-xs font-semibold rounded-full shadow-lg">
              Performance
            </span>
          </div>
          
          <!-- Tiempo de lectura -->
          <div class="absolute top-4 right-4">
            <div class="flex items-center gap-1 px-2 py-1 bg-black/50 backdrop-blur-sm rounded-full">
              <Icon name="clock" class="w-3 h-3 text-gray-300" />
              <span class="text-xs text-gray-300 font-medium">8 min</span>
            </div>
          </div>
          
          <!-- Overlay content -->
          <div class="absolute bottom-4 left-4 right-4">
            <!-- Fecha -->
            <div class="flex items-center gap-2 text-gray-300 text-xs mb-2">
              <Icon name="calendar" class="w-3 h-3" />
              <span>08 Enero 2024</span>
            </div>
            
            <!-- Título -->
            <h3 class="text-lg font-bold text-white leading-tight group-hover:text-blue-100 transition-colors">
              Cómo optimizar el rendimiento de tu sitio web en 2024
            </h3>
          </div>
        </div>
        
        <!-- Footer compacto -->
        <div class="relative p-4 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-7 h-7 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full flex items-center justify-center">
              <span class="text-white text-xs font-bold">TD</span>
            </div>
            <div>
              <span class="text-gray-300 text-sm font-medium">Turin Dev</span>
              <div class="flex items-center gap-1 text-xs text-gray-500">
                <Icon name="heart" class="w-3 h-3" />
                <span>89</span>
              </div>
            </div>
          </div>
          
          <button class="group/btn flex items-center justify-center w-9 h-9 bg-blue-500/10 hover:bg-blue-500/20 border border-blue-500/20 hover:border-blue-400/40 rounded-xl transition-all duration-300 hover:scale-110">
            <Icon name="arrow-right" class="w-4 h-4 text-blue-400 transition-transform group-hover/btn:translate-x-0.5" />
          </button>
        </div>
      </article>

      <!-- Artículo 3 -->
      <article class="group relative bg-gradient-to-br from-gray-900/80 to-black/60 backdrop-blur-xl border border-gray-700/30 rounded-3xl overflow-hidden hover:border-purple-400/50 hover:bg-gradient-to-br hover:from-purple-900/10 hover:via-gray-900/95 hover:to-pink-900/10 transition-all duration-500 hover:-translate-y-3 hover:shadow-[0_25px_50px_-12px_rgba(147,51,234,0.4)] cursor-pointer">
        <!-- Glow effect -->
        <div class="absolute -inset-0.5 bg-gradient-to-r from-purple-500/20 to-pink-500/20 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-sm"></div>
        
        <!-- Imagen -->
        <div class="relative aspect-[4/3] overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1581291518857-4e27b48ff24e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
            alt="Diseño UX/UI moderno" 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
          
          <!-- Categoría -->
          <div class="absolute top-4 left-4">
            <span class="px-3 py-1.5 bg-purple-500/90 backdrop-blur-sm text-white text-xs font-semibold rounded-full shadow-lg">
              UX/UI Design
            </span>
          </div>
          
          <!-- Tiempo de lectura -->
          <div class="absolute top-4 right-4">
            <div class="flex items-center gap-1 px-2 py-1 bg-black/50 backdrop-blur-sm rounded-full">
              <Icon name="clock" class="w-3 h-3 text-gray-300" />
              <span class="text-xs text-gray-300 font-medium">6 min</span>
            </div>
          </div>
          
          <!-- Overlay content -->
          <div class="absolute bottom-4 left-4 right-4">
            <!-- Fecha -->
            <div class="flex items-center gap-2 text-gray-300 text-xs mb-2">
              <Icon name="calendar" class="w-3 h-3" />
              <span>02 Enero 2024</span>
            </div>
            
            <!-- Título -->
            <h3 class="text-lg font-bold text-white leading-tight group-hover:text-purple-100 transition-colors">
              Principios de diseño UX que todo desarrollador debe conocer
            </h3>
          </div>
        </div>
        
        <!-- Footer compacto -->
        <div class="relative p-4 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-7 h-7 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
              <span class="text-white text-xs font-bold">TD</span>
            </div>
            <div>
              <span class="text-gray-300 text-sm font-medium">Turin Dev</span>
              <div class="flex items-center gap-1 text-xs text-gray-500">
                <Icon name="heart" class="w-3 h-3" />
                <span>156</span>
              </div>
            </div>
          </div>
          
          <button class="group/btn flex items-center justify-center w-9 h-9 bg-purple-500/10 hover:bg-purple-500/20 border border-purple-500/20 hover:border-purple-400/40 rounded-xl transition-all duration-300 hover:scale-110">
            <Icon name="arrow-right" class="w-4 h-4 text-purple-400 transition-transform group-hover/btn:translate-x-0.5" />
          </button>
        </div>
      </article>

    </div>

    <!-- CTA para ver más artículos -->
    <div class="text-center mt-20">
      <div class="relative inline-block">
        <!-- Glow effect -->
        <div class="absolute -inset-1 bg-gradient-to-r from-green-500/30 to-emerald-500/30 rounded-2xl blur opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <button class="group relative inline-flex items-center gap-3 px-10 py-5 bg-gradient-to-r from-green-600 via-emerald-600 to-green-700 hover:from-green-500 hover:via-emerald-500 hover:to-green-600 text-white font-bold rounded-2xl transition-all duration-300 hover:shadow-[0_25px_50px_-12px_rgba(16,185,129,0.5)] hover:-translate-y-2 hover:scale-105 overflow-hidden">
          <!-- Shine effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          
          <Icon name="file-text" class="relative z-10 w-5 h-5 transition-transform group-hover:rotate-12" />
          <span class="relative z-10">Explorar Blog Completo</span>
          <Icon name="arrow-right" class="relative z-10 w-5 h-5 transition-transform group-hover:translate-x-1" />
        </button>
      </div>
      
      <!-- Stats del blog -->
      <div class="flex items-center justify-center gap-8 mt-8 text-sm text-gray-400">
        <div class="flex items-center gap-2">
          <Icon name="file-text" class="w-4 h-4 text-green-400" />
          <span>25+ Artículos</span>
        </div>
        <div class="w-1 h-1 bg-gray-600 rounded-full"></div>
        <div class="flex items-center gap-2">
          <Icon name="heart" class="w-4 h-4 text-emerald-400" />
          <span>1.2K Lectores</span>
        </div>
        <div class="w-1 h-1 bg-gray-600 rounded-full"></div>
        <div class="flex items-center gap-2">
          <Icon name="clock" class="w-4 h-4 text-green-400" />
          <span>Actualizado Semanalmente</span>
        </div>
      </div>
    </div>
  </div>
</section>