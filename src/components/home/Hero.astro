---
// Hero.astro
import Icon from "../Icon.astro";
---

<section class="hero-section relative pt-12">
  <!-- Elementos decorativos animados -->
  <div class="hero-bg-gradient absolute inset-0 -z-10 overflow-hidden">
    <!-- Gradientes flotantes -->
    <div class="hero-float-1 absolute top-1/4 left-1/4 w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 bg-gradient-to-r from-green-500/10 to-emerald-500/10 rounded-full blur-2xl sm:blur-3xl"></div>
    <div class="hero-float-2 absolute bottom-1/4 right-1/4 w-40 h-40 sm:w-56 sm:h-56 md:w-72 md:h-72 lg:w-80 lg:h-80 bg-gradient-to-r from-emerald-500/10 to-green-600/10 rounded-full blur-2xl sm:blur-3xl"></div>
    <div class="hero-float-3 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 sm:w-48 sm:h-48 md:w-56 md:h-56 lg:w-64 lg:h-64 bg-gradient-to-r from-green-400/5 to-emerald-400/5 rounded-full blur-xl sm:blur-2xl"></div>
  </div>

  <!-- Contenido principal del Hero -->
  <div class="w-full relative z-10 space-y-12 sm:space-y-16 md:space-y-20 lg:space-y-24">
    <div class="grid grid-cols-1 lg:grid-cols-[1.5fr_1fr] gap-8 sm:gap-10 md:gap-12 lg:gap-16 items-center">
      
      <!-- Columna Izquierda - Contenido -->
      <div class="space-y-6 sm:space-y-8 lg:space-y-10 text-center lg:text-left px-4 sm:px-0">

        <!-- Título principal -->
        <div class="space-y-4 sm:space-y-6 lg:space-y-8">
          <h1 class="hero-title text-3xl xs:text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-[1.1] sm:leading-tight">
            <span class="block bg-gradient-to-r from-green-400 to-emerald-500 bg-clip-text text-transparent">
              Desarrollo
            </span>
            <span class="block">Web Profesional.</span>
          </h1>
          
          <p class="hero-description text-base sm:text-lg md:text-xl text-gray-400 max-w-sm sm:max-w-md lg:max-w-lg mx-auto lg:mx-0 leading-relaxed">
            Desarrollador Full Stack especializado en crear soluciones web modernas y funcionales.
          </p>
        </div>

        <!-- Botón de acción y redes sociales -->
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 sm:gap-6">
          <a 
            href="/proyectos" 
            class="hero-cta group inline-flex items-center justify-center gap-3 px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-green-600 via-emerald-600 to-green-700 text-white font-semibold rounded-full transition-all duration-300 hover:scale-105 hover:shadow-[0_0_25px_rgba(34,197,94,0.5)] text-sm sm:text-base w-full sm:w-auto max-w-xs sm:max-w-none"
          >
            <span>Ver mi trabajo</span>
            <Icon name="arrow-right" class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" />
          </a>

          <!-- Iconos de redes sociales -->
          <div class="hero-social flex items-center justify-center gap-2 sm:gap-3">
            <!-- X (Twitter) -->
            <a 
              href="https://x.com/turindev" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-gray-800/30 to-gray-900/30 backdrop-blur-sm text-gray-400 hover:text-white hover:bg-gradient-to-br hover:from-green-500/20 hover:to-emerald-500/20 transition-all duration-300 hover:scale-110 hover:shadow-xl hover:shadow-green-500/30"
              title="Sígueme en X"
            >
              <Icon name="twitter" class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" />
            </a>

            <!-- GitHub -->
            <a 
              href="https://github.com/turindev" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-gray-800/30 to-gray-900/30 backdrop-blur-sm text-gray-400 hover:text-white hover:bg-gradient-to-br hover:from-green-500/20 hover:to-emerald-500/20 transition-all duration-300 hover:scale-110 hover:shadow-xl hover:shadow-green-500/30"
              title="Ver mi código en GitHub"
            >
              <Icon name="github" class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" />
            </a>

            <!-- LinkedIn -->
            <a 
              href="https://linkedin.com/in/turindev" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-gray-800/30 to-gray-900/30 backdrop-blur-sm text-gray-400 hover:text-white hover:bg-gradient-to-br hover:from-green-500/20 hover:to-emerald-500/20 transition-all duration-300 hover:scale-110 hover:shadow-xl hover:shadow-green-500/30"
              title="Conecta conmigo en LinkedIn"
            >
              <Icon name="linkedin" class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" />
            </a>

            <!-- YouTube -->
            <a 
              href="https://youtube.com/@turindev" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-gray-800/30 to-gray-900/30 backdrop-blur-sm text-gray-400 hover:text-white hover:bg-gradient-to-br hover:from-green-500/20 hover:to-emerald-500/20 transition-all duration-300 hover:scale-110 hover:shadow-xl hover:shadow-green-500/30"
              title="Suscríbete a mi canal de YouTube"
            >
              <Icon name="youtube" class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" />
            </a>
          </div>
        </div>
      </div>

      <!-- Columna Derecha - Visual/Imagen -->
      <div class="hero-visual relative flex items-center justify-center lg:justify-end mt-0 lg:mt-0">
        
        <!-- Contenedor principal con efectos -->
        <div class="relative w-full max-w-sm sm:max-w-md mx-auto lg:mx-0">
          
          <!-- Círculo de fondo con gradiente -->
          <div class="absolute inset-0 bg-gradient-to-br from-green-500/15 via-emerald-500/8 to-green-600/15 rounded-full blur-3xl"></div>
          
          <!-- Elemento visual principal -->
          <div class="relative bg-gradient-to-br from-gray-900/60 to-gray-800/40 backdrop-blur-sm border border-white/10 rounded-xl sm:rounded-2xl p-6 shadow-2xl hover:shadow-[0_0_40px_rgba(34,197,94,0.2)] transition-all duration-500 hover:scale-[1.02]">
            
            <!-- Código simulado -->
            <div class="space-y-4">
              <div class="flex items-center gap-3 mb-6">
                <div class="flex gap-2">
                  <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                  <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                  <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                </div>
                <span class="text-gray-400 text-sm font-mono">turin.dev</span>
              </div>
              
              <div class="space-y-3 font-mono text-sm">
                <div class="flex items-center gap-2">
                  <span class="text-green-400">const</span>
                  <span class="text-blue-300">developer</span>
                  <span class="text-gray-300">=</span>
                  <span class="text-green-300">{</span>
                </div>
                <div class="pl-4 space-y-2">
                  <div class="flex items-center gap-2">
                    <span class="text-blue-300">name:</span>
                    <span class="text-orange-300">'Turin Dev'</span><span class="text-gray-300">,</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <span class="text-blue-300">skills:</span>
                    <span class="text-gray-300">[</span>
                  </div>
                  <div class="pl-4 space-y-1">
                    <div class="text-orange-300">'React'<span class="text-gray-300">,</span></div>
                    <div class="text-orange-300">'Node.js'<span class="text-gray-300">,</span></div>
                    <div class="text-orange-300">'TypeScript'<span class="text-gray-300">,</span></div>
                    <div class="text-orange-300">'Astro'</div>
                  </div>
                  <div class="text-gray-300">],</div>
                  <div class="flex items-center gap-2">
                    <span class="text-blue-300">passion:</span>
                    <span class="text-orange-300">'Creating amazing web experiences'</span>
                  </div>
                </div>
                <div class="text-green-300">}</div>
              </div>
            </div>
            
            <!-- Elementos decorativos flotantes -->
            <div class="absolute -top-3 -right-3 w-6 h-6 bg-green-500/25 rounded-full animate-bounce" style="animation-delay: 1s;"></div>
            <div class="absolute -bottom-3 -left-3 w-4 h-4 bg-emerald-400/25 rounded-full animate-bounce" style="animation-delay: 2s;"></div>
          </div>
          
          <!-- Elementos decorativos adicionales -->
          <div class="absolute bottom-1/4 -right-6 w-8 h-8 border border-green-400/15 rounded-lg rotate-45 animate-pulse"></div>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="hero-stats grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 lg:gap-6 mt-8 sm:mt-10 px-4 sm:px-0">
      <div
        class="stat-item hero-stat bg-gray-900/40 backdrop-blur-sm border border-gray-700/30 rounded-xl sm:rounded-2xl p-4 sm:p-6 transition-all duration-500 hover:bg-gradient-to-br hover:from-gray-800/60 hover:to-gray-900/80 hover:border-green-400/50 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl hover:shadow-green-500/20 flex flex-col sm:flex-row items-center sm:gap-4 group text-center sm:text-left">
        <div class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-white group-hover:text-green-100 transition-colors duration-500">
          <span class="counter" data-target="14">0</span>
        </div>
        <div class="text-gray-400 text-xs sm:text-sm lg:text-base font-medium leading-tight group-hover:text-gray-300 transition-colors duration-500 mt-1 sm:mt-0">
          <div>Años de</div>
          <div>Experiencia</div>
        </div>
      </div>
      <div
        class="stat-item hero-stat bg-gray-900/40 backdrop-blur-sm border border-gray-700/30 rounded-xl sm:rounded-2xl p-4 sm:p-6 transition-all duration-500 hover:bg-gradient-to-br hover:from-gray-800/60 hover:to-gray-900/80 hover:border-green-400/50 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl hover:shadow-green-500/20 flex flex-col sm:flex-row items-center sm:gap-4 group text-center sm:text-left">
        <div class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-white group-hover:text-green-100 transition-colors duration-500">
          <span class="counter" data-target="50" data-suffix="+">0</span>
        </div>
        <div class="text-gray-400 text-xs sm:text-sm lg:text-base font-medium leading-tight group-hover:text-gray-300 transition-colors duration-500 mt-1 sm:mt-0">
          <div>Proyectos</div>
          <div>Completados</div>
        </div>
      </div>
      <div
        class="stat-item hero-stat bg-gray-900/40 backdrop-blur-sm border border-gray-700/30 rounded-xl sm:rounded-2xl p-4 sm:p-6 transition-all duration-500 hover:bg-gradient-to-br hover:from-gray-800/60 hover:to-gray-900/80 hover:border-green-400/50 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl hover:shadow-green-500/20 flex flex-col sm:flex-row items-center sm:gap-4 group text-center sm:text-left">
        <div class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-white group-hover:text-green-100 transition-colors duration-500">
          <span class="counter" data-target="1500" data-suffix="K" data-format="decimal">0</span>
        </div>
        <div class="text-gray-400 text-xs sm:text-sm lg:text-base font-medium leading-tight group-hover:text-gray-300 transition-colors duration-500 mt-1 sm:mt-0">
          <div>Clientes</div>
          <div>Satisfechos</div>
        </div>
      </div>
      <div
        class="stat-item hero-stat bg-gray-900/40 backdrop-blur-sm border border-gray-700/30 rounded-xl sm:rounded-2xl p-4 sm:p-6 transition-all duration-500 hover:bg-gradient-to-br hover:from-gray-800/60 hover:to-gray-900/80 hover:border-green-400/50 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl hover:shadow-green-500/20 flex flex-col sm:flex-row items-center sm:gap-4 group text-center sm:text-left">
        <div class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-white group-hover:text-green-100 transition-colors duration-500">
          <span class="counter" data-target="14">0</span>
        </div>
        <div class="text-gray-400 text-xs sm:text-sm lg:text-base font-medium leading-tight group-hover:text-gray-300 transition-colors duration-500 mt-1 sm:mt-0">
          <div>Premios</div>
          <div>Ganados</div>
        </div>
      </div>
    </div>

    <!-- Tech Stack Carousel - Integrado en Hero -->
    <div class="px-4 sm:px-0 w-full py-4">
      <div class="text-center mb-6 sm:mb-8 mt-8">
        <div class="tech-title inline-flex items-center gap-2 px-3 sm:px-4 py-2 bg-gradient-to-r from-green-500/10 to-emerald-500/10 backdrop-blur-sm border border-green-500/20 rounded-full mb-4">
          <Icon name="zap" class="w-4 h-4 sm:w-5 sm:h-5 text-green-400" />
          <span class="text-green-400 font-medium text-xs sm:text-sm">Tecnologías que domino</span>
        </div>
      </div>
      
      <div class="tech-carousel-container relative w-full py-4 overflow-hidden">
        <!-- Gradientes laterales -->
        <div class="absolute left-0 top-0 bottom-0 w-8 sm:w-16 lg:w-20 bg-gradient-to-r from-slate-950 to-transparent z-10 pointer-events-none"></div>
        <div class="absolute right-0 top-0 bottom-0 w-8 sm:w-16 lg:w-20 bg-gradient-to-l from-slate-950 to-transparent z-10 pointer-events-none"></div>
        
        <!-- Carrusel -->
        <div class="tech-carousel flex items-center gap-4 sm:gap-6 lg:gap-8 py-2 will-change-transform" style="animation: scroll-left 30s linear infinite;">
          <!-- Primera fila de tecnologías -->
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-orange-500/20 to-orange-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-orange-500/30 hover:border-orange-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-orange-500 font-bold text-sm sm:text-base lg:text-lg group-hover:text-orange-400">HTML</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-blue-500/20 to-blue-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-blue-500/30 hover:border-blue-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-blue-500 font-bold text-sm sm:text-base lg:text-lg group-hover:text-blue-400">CSS</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-yellow-500/20 to-yellow-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-yellow-500/30 hover:border-yellow-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-yellow-500 font-bold text-sm group-hover:text-yellow-400">JS</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-cyan-500/20 to-cyan-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-cyan-500/30 hover:border-cyan-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-cyan-500 font-bold text-sm group-hover:text-cyan-400">React</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-green-500/20 to-green-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-green-500/30 hover:border-green-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-green-500 font-bold text-sm group-hover:text-green-400">Node</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-purple-500/20 to-purple-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-purple-500/30 hover:border-purple-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-purple-500 font-bold text-sm group-hover:text-purple-400">Astro</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-cyan-400/20 to-cyan-500/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-cyan-400/30 hover:border-cyan-300/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-cyan-400 font-bold text-xs sm:text-sm group-hover:text-cyan-300">Tailwind</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-blue-600/20 to-blue-700/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-blue-600/30 hover:border-blue-500/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-blue-600 font-bold text-sm group-hover:text-blue-500">PHP</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-blue-500/20 to-blue-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-blue-500/30 hover:border-blue-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-blue-500 font-bold text-xs sm:text-sm group-hover:text-blue-400">MySQL</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-green-600/20 to-green-700/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-green-600/30 hover:border-green-500/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-green-600 font-bold text-xs sm:text-sm group-hover:text-green-500">MongoDB</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-orange-500/20 to-orange-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-orange-500/30 hover:border-orange-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-orange-500 font-bold text-sm group-hover:text-orange-400">Git</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-blue-600/20 to-blue-700/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-blue-600/30 hover:border-blue-500/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-blue-600 font-bold text-xs sm:text-sm group-hover:text-blue-500">WordPress</span>
            </div>
          </div>
          
          <!-- Duplicar para efecto infinito -->
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-orange-500/20 to-orange-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-orange-500/30 hover:border-orange-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-orange-500 font-bold text-sm sm:text-base lg:text-lg group-hover:text-orange-400">HTML</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-blue-500/20 to-blue-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-blue-500/30 hover:border-blue-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-blue-500 font-bold text-sm sm:text-base lg:text-lg group-hover:text-blue-400">CSS</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-yellow-500/20 to-yellow-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-yellow-500/30 hover:border-yellow-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-yellow-500 font-bold text-sm group-hover:text-yellow-400">JS</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-cyan-500/20 to-cyan-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-cyan-500/30 hover:border-cyan-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-cyan-500 font-bold text-sm group-hover:text-cyan-400">React</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-green-500/20 to-green-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-green-500/30 hover:border-green-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-green-500 font-bold text-sm group-hover:text-green-400">Node</span>
            </div>
          </div>
          
          <div class="tech-item flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 bg-gradient-to-br from-purple-500/20 to-purple-600/20 rounded-xl sm:rounded-2xl flex items-center justify-center border border-purple-500/30 hover:border-purple-400/50 transition-all duration-300 hover:scale-110 group">
              <span class="text-purple-500 font-bold text-sm group-hover:text-purple-400">Astro</span>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  /* Tech Carousel Styles - Mantenemos solo estas animaciones CSS */
