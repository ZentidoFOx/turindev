<style>
  .testimonials-slider {
    position: relative;
    overflow: hidden;
    padding: 16px 0;
    margin: -8px;
  }
  
  .testimonials-track {
    width: 300%;
    will-change: transform;
  }
  
  .testimonial-slide {
    width: calc(100% / 3);
    padding: 8px;
    box-sizing: border-box;
  }
  
  .testimonial-item {
    will-change: transform, opacity;
    transform-origin: center;
  }
  
  .testimonial-dot.active {
    background-color: #10b981;
    width: 1.75rem; /* 28px - más delgado */
    height: 0.375rem; /* 6px */
    transform: scale(1.05);
    box-shadow: 0 2px 8px rgba(16, 185, 129, 0.5);
  }
  
  .testimonial-nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
    transform: none !important;
    pointer-events: none;
  }
  
  .testimonial-nav-btn:disabled .absolute {
    opacity: 0 !important;
  }
  
  .testimonial-nav-btn:active {
    transform: scale(0.95);
  }
  
  .testimonial-nav-btn:hover svg {
    filter: drop-shadow(0 0 4px rgba(34, 197, 94, 0.4));
  }
  
  .stars-container svg {
    transition: all 0.3s ease;
  }
  
  .testimonial-item:hover .stars-container svg {
    transform: scale(1.1) rotate(5deg);
  }
  
  .testimonial-progress {
    transition: width 0.5s ease-out;
  }
  
  /* Autoplay pause indicator */
  .testimonials-slider.paused::after {
    content: '⏸️';
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 12px;
    opacity: 0.5;
  }
  
  /* Loading animation for testimonials */
  @keyframes testimonialFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  
  .testimonial-item {
    animation: testimonialFadeIn 0.6s ease-out;
  }
</style>
