---
import Layout from '../layouts/Layout.astro';
import { getActresses, type Actress, type ApiResponse } from '../services/api';

const data = await getActresses();
---

<Layout title="Actrices - TurinDev">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Lista de Actrices</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {data.data.map((actress) => (
        <a href={`/actriz/${actress.slug}`} class="block transition transform hover:scale-105">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img 
              src={actress.image} 
              alt={actress.name}
              class="w-full h-64 object-cover"
            />
            <div class="p-4">
              <h2 class="text-2xl font-bold mb-2">{actress.name}</h2>
              <p class="text-gray-600 mb-4 line-clamp-2">{actress.bio}</p>
              <div class="text-sm text-gray-500">
                <p><strong>Fecha de nacimiento:</strong> {actress.birthDate}</p>
                <p><strong>Lugar de nacimiento:</strong> {actress.birthPlace}</p>
                {actress.featured && (
                  <span class="inline-block mt-2 px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs">
                    ‚≠ê Destacada
                  </span>
                )}
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>