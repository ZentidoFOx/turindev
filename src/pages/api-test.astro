---
import Layout from '../layouts/Layout.astro';
import { getActresses, type Actress, type ApiResponse } from '../services/api';

const data = await getActresses();
---

<Layout title="API Test - Actrices">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Lista de Actrices</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {data.data.map((actress) => (
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <img 
            src={actress.image} 
            alt={actress.name}
            class="w-full h-64 object-cover"
          />
          <div class="p-4">
            <h2 class="text-2xl font-bold mb-2">{actress.name}</h2>
            <p class="text-gray-600 mb-4">{actress.bio}</p>
            <div class="text-sm text-gray-500">
              <p><strong>Fecha de nacimiento:</strong> {actress.birthDate}</p>
              <p><strong>Lugar de nacimiento:</strong> {actress.birthPlace}</p>
              <p><strong>Altura:</strong> {actress.height}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>