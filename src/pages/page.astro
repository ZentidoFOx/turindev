---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/home/Hero.astro";
import Portafolio from "../components/home/Portafolio.astro";
import Testimonios from "../components/home/Testimonios.astro";
import Servicios from "../components/home/Servicios.astro";
import Footer from "../components/Footer.astro";
import Blogs from "../components/home/Blogs.astro";
import Contacto from "../components/home/Contacto.astro";
---
<Layout>
	<Header />
	<main class="w-full overflow-x-hidden">
		<div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
			<Hero />
			<Servicios />
			<Portafolio />
			<Testimonios />
			<Blogs />
			<Contacto />
		</div>
	</main>
	<Footer />
	
	<!-- Register animations for this page -->
	<script is:inline>
	  // Register home page animations
	  window.animationSystems = window.animationSystems || {};
	  window.animationSystems.home = () => import('/js/animations/index.js');
	</script>
</Layout>


