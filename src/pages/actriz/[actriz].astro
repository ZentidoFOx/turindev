---
import Layout from '../../layouts/Layout.astro';
import { getActresses, type Actress } from '../../services/api';

// Obtener el parámetro de la URL
const { actriz } = Astro.params;

// Obtener todas las actrices y encontrar la que coincida con el slug
const { data } = await getActresses();
const actress = data.find(a => a.slug === actriz);

// Si no se encuentra la actriz, redirigir a la página de lista
if (!actress) {
    return Astro.redirect('/actrices');
}
---

<Layout title={`${actress.name} - TurinDev`}>
    <main class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <!-- Botón de regreso -->
            <a href="/actrices" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Volver a la lista
            </a>

            <div class="bg-white rounded-lg shadow-xl overflow-hidden">
                <div class="md:flex">
                    <!-- Imagen de la actriz -->
                    <div class="md:flex-shrink-0 md:w-1/2">
                        <img 
                            src={actress.image} 
                            alt={actress.name}
                            class="w-full h-[500px] object-cover"
                        />
                    </div>

                    <!-- Información de la actriz -->
                    <div class="p-8 md:w-1/2">
                        <h1 class="text-4xl font-bold text-gray-900 mb-4">
                            {actress.name}
                        </h1>

                        <div class="space-y-4">
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <h2 class="text-xl font-semibold text-gray-900 mb-2">Biografía</h2>
                                <p class="text-gray-700 leading-relaxed">
                                    {actress.bio}
                                </p>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <h3 class="font-semibold text-gray-900">Fecha de Nacimiento</h3>
                                    <p class="text-gray-700">{actress.birthDate}</p>
                                </div>

                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <h3 class="font-semibold text-gray-900">Lugar de Nacimiento</h3>
                                    <p class="text-gray-700">{actress.birthPlace}</p>
                                </div>

                                <div class="bg-gray-50 p-4 rounded-lg col-span-2">
                                    <h3 class="font-semibold text-gray-900">Altura</h3>
                                    <p class="text-gray-700">{actress.height}</p>
                                </div>
                            </div>

                            {actress.featured && (
                                <div class="mt-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                                        ⭐ Actriz Destacada
                                    </span>
                                </div>
                            )}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
