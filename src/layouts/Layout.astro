---
// Layout principal sin GSAP
import Icons from "../components/Icons.astro";
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Critical CSS - Load fonts early -->
    <link rel="stylesheet" href="/fonts/inter-local.css">
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/images/bg.avif" as="image" type="image/avif">
    
    <!-- Bloquear indexaci칩n -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- SEO b치sico -->
    <title>Turin.dev | Agencia de Desarrollo Web Profesional</title>
    <meta
      name="description"
      content="En Turin.dev creamos lugares web modernos, r치pidos y optimizados. Agencia de desarrollo web con soluciones en dise침o, frontend, backend y SEO."
    />
    
  </head>
  <body class="bg-black overflow-x-hidden">
    <!-- Mouse Glow Effect -->
    <div id="mouse-glow" class="mouse-glow"></div>
    
    <Icons />
    <slot />
    
    <!-- Critical performance script -->
    <script is:inline>
      // Load background image after critical content
      window.addEventListener('load', function() {
        document.body.classList.add('loaded');
      });
      
      // Fallback for slow connections
      setTimeout(function() {
        document.body.classList.add('loaded');
      }, 2000);
    </script>
    
    <!-- GSAP Library -->
    <script>
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';
      import { Draggable } from 'gsap/Draggable';
      
      // Register GSAP plugins
      gsap.registerPlugin(ScrollTrigger, Draggable);
      
      // Make GSAP available globally
      (globalThis as any).gsap = gsap;
      (globalThis as any).ScrollTrigger = ScrollTrigger;
      (globalThis as any).Draggable = Draggable;
      
      // Dispatch event when GSAP is ready
      document.addEventListener('DOMContentLoaded', () => {
        document.dispatchEvent(new CustomEvent('gsapReady'));
      });
    </script>
    
    <!-- Main JavaScript -->
    <script is:inline src="/main.js"></script>
    
    <!-- GSAP Animation System -->
    <script is:inline src="/js/gsap-init.js"></script>
  </body>
</html>

<style>

  body {
    font-family: 'Inter';
    background-color: #020617;
    color: #fff;
    overflow-x: hidden;
    width: 100%;
    max-width: 100vw;
    /* Defer background image loading */
    background-image: none;
    /* Prevent font loading flash */
    font-display: swap;
  }
  
  /* Load background image after critical content */
  body.loaded {
    background-image: url(/images/bg.avif);
    background-position: 0 0;
    background-repeat: repeat-y;
    background-size: auto;
    transition: background-color .3s, color .3s;
  }


  /* Elementos visibles por defecto sin animaciones */

  /* Prevent horizontal scroll globally */
  * {
    box-sizing: border-box;
    max-width: 100%;
  }
  
  /* Ensure all sections respect viewport width */
  section, main, div {
    max-width: 100vw;
    overflow-x: hidden;
  }
  
  /* Fix for absolute positioned elements */
  .absolute {
    max-width: 100vw;
  }

  /* Mouse Glow Effect */
  .mouse-glow {
    position: fixed;
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      rgba(52, 211, 153, 0.15) 0%,
      rgba(16, 185, 129, 0.12) 20%,
      rgba(5, 150, 105, 0.08) 40%,
      rgba(52, 211, 153, 0.04) 60%,
      rgba(16, 185, 129, 0) 80%
    );
    border-radius: 50%;
    pointer-events: none;
    z-index: 1;
    will-change: transform;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 50%;
    transition: opacity 0.3s ease;
    opacity: 1;
  }

  /* Enhanced glow on interactive elements */
  .mouse-glow.enhanced {
    background: radial-gradient(
      circle,
      rgba(52, 211, 153, 0.25) 0%,
      rgba(16, 185, 129, 0.18) 20%,
      rgba(5, 150, 105, 0.12) 40%,
      rgba(52, 211, 153, 0.06) 60%,
      rgba(16, 185, 129, 0) 80%
    );
    width: 400px;
    height: 400px;
  }

</style>

