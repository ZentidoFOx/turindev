---
import GSAPLoader from '../components/GSAPLoader.astro';
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/main.js" as="script">
    <link rel="preload" href="/images/bg.avif" as="image" type="image/avif">
    
    <!-- Resource hints for better performance -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    <!-- Bloquear indexaci칩n -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- SEO b치sico -->
    <title>Turin.dev | Agencia de Desarrollo Web Profesional</title>
    <meta
      name="description"
      content="En Turin.dev creamos lugares web modernos, r치pidos y optimizados. Agencia de desarrollo web con soluciones en dise침o, frontend, backend y SEO."
    />

    <!-- Preconnect to Google Fonts for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
      media="print" 
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
        rel="stylesheet"
      />
    </noscript>
    
  </head>
  <body class="bg-black overflow-x-hidden">
    <!-- Cursor glow effect -->
    <div id="cursor-glow" class="cursor-glow"></div>
    <slot />
    
    <!-- Defer non-critical JavaScript for better performance -->
    <GSAPLoader />
    
    <!-- Critical performance script -->
    <script is:inline>
      // Load background image after critical content
      window.addEventListener('load', function() {
        document.body.classList.add('loaded');
      });
      
      // Fallback for slow connections
      setTimeout(function() {
        document.body.classList.add('loaded');
      }, 2000);
    </script>
    
    <!-- Main JavaScript - Deferred -->
    <script is:inline src="/main.js" defer></script>
  </body>
</html>

<style>
  html {
    overflow-x: hidden;
  }
  
  body {
    font-family: Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background-color: #020617;
    color: #fff;
    overflow-x: hidden;
    width: 100%;
    max-width: 100vw;
    /* Defer background image loading */
    background-image: none;
  }
  
  /* Load background image after critical content */
  body.loaded {
    background-image: url(/images/bg.avif);
    background-position: 0 0;
    background-repeat: repeat-y;
    background-size: auto;
    transition: background-color .3s, color .3s;
  }

  /* Cursor glow effect */
  .cursor-glow {
    position: fixed;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(34, 197, 94, 0.15) 0%, rgba(16, 185, 129, 0.08) 40%, rgba(34, 197, 94, 0) 70%);
    border-radius: 50%;
    pointer-events: none;
    z-index: -1;
    will-change: transform;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 50%;
    transition: opacity 0.3s ease;
    opacity: 0;
  }

  @media (hover: hover) and (pointer: fine) {
    .cursor-glow {
      opacity: 1;
    }
  }

  /* Estados iniciales para GSAP */
  .fade-up, .fade-left, .fade-right, .scale-up, .stagger-item {
    opacity: 0;
  }

  /* Prevent horizontal scroll globally */
  * {
    box-sizing: border-box;
  }
  
  *:not(.tech-carousel) {
    max-width: 100%;
  }
  
  /* Ensure all sections respect viewport width */
  section, main, div {
    max-width: 100vw;
    overflow-x: hidden;
  }
  
  /* Fix for absolute positioned elements */
  .absolute {
    max-width: 100vw;
  }

</style>

